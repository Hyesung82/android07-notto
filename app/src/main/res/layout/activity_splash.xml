<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.splash.SplashActivity">

        <ImageView
            android:id="@+id/iv_splash_icon_1"
            android:layout_width="@dimen/activity_splash_icon_width"
            android:layout_height="@dimen/activity_splash_icon_height"
            android:layout_marginBottom="10dp"
            android:src="@drawable/bg_todo_edit_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.442"
            app:tint="@color/yellow_normal" />

        <ImageView
            android:id="@+id/iv_splash_icon_2"
            android:layout_width="@dimen/activity_splash_icon_width"
            android:layout_height="@dimen/activity_splash_icon_height"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_splash_icon_1"
            app:srcCompat="@drawable/bg_todo_edit_button"
            app:tint="@color/gray_light" />

        <ImageView
            android:id="@+id/iv_splash_icon_3"
            android:layout_width="@dimen/activity_splash_icon_width"
            android:layout_height="@dimen/activity_splash_icon_height"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_splash_icon_2"
            app:srcCompat="@drawable/bg_todo_edit_button"
            app:tint="@color/blue_light"/>

        <ImageView
            android:id="@+id/tv_splash_title"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_splash_icon_3"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/img_notto_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>